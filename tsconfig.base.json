{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "dashboard/Module": ["dashboard/src/app/remote-entry/entry.module.ts"],
      "login-app/Module": ["login-app/src/app/remote-entry/entry.module.ts"],
      "login-page/Module": ["login-page/src/app/remote-entry/entry.module.ts"],
      "login/Module": ["login/src/app/remote-entry/entry.module.ts"],
      "register/Module": ["register/src/app/remote-entry/entry.module.ts"],
      "sign-in/Module": ["sign-in/src/app/remote-entry/entry.module.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
